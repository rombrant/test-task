  body
    .wrapper
      .maincontent
        .header 
        .header__wrapper
            h1.header-headline.headline Ты готов стать профессионалом?
            span.header-desc.desc Мы ищем 
              span(style="color:#F47821") талантов 
              span и 
              span(style="color:#F47821") саппортов 
              span в команду. Решите на какую категорию вы претендуете. 
            button.header-sbt-btn.sbt-btn 
                span Заполнить Анкету
        .container.main__container
            .main-background
            .main-motivation
              ul.main__container-list
                for item in items 
                  li.main__container-item
                    span.main__container-item-title #{item.title}
                    p.main__container-item-desc #{item.desc}
        .container.desc__container
          .desc__wrapper
            h2.headline.desc-headline Мы похожи!
            p.desc-text !{text}
        .container.conditions__container
          h2.headline.conditions-headline Приемущества работы с нами
          ul.conditions__container-list
            for condition in conditions 
              li.conditions__container-item
                span.conditions__container-item-title #{condition.title}
                p.conditions__container-item-desc #{condition.desc}
        .container.form__container
          h3.headline.form-headline Теперь расскажите о себе
          form.form__container__block
            for label in labels
              label.form__container__block-label
                span.form__container__block-desc
                  span.form__container__block-id #{label.id}
                  span.form__container__block-title !{label.title}
                input.form__container__block-input(placeholder= `${label.placeholder}` type=`${label.type}` name=`${label.name}`)
            label.form__container__block-label
              span.form__container__block-desc
                span.form__container__block-id #{textarea.id}
